# Application
APP_NAME="AI Agent Platform"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=your-secret-key-here

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ai_agent_platform
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=
GPT4_MODEL=gpt-4
O1_MODEL=o1
O1_MINI_MODEL=o1-mini

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# App Generation
APP_GENERATION_MAX_TOKENS=4000
APP_GENERATION_TEMPERATURE=0.7
DEFAULT_AI_MODEL=gpt-4

# Email Configuration
MAIL_TRANSPORT=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM=noreply@aiagentplatform.com
MAIL_FROM_NAME="AI Agent Platform"

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_CHANNEL=stack
LOG_PATH=/var/log/ai-agent-platform

# Redis (Optional for caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage
STORAGE_PATH=/storage
GENERATED_APPS_PATH=/storage/generated-apps
