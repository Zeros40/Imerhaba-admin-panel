{
  "name": "imerhaba/ai-agent-platform",
  "description": "Full-Stack AI Agent Platform for building apps from prompts",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "phpmailer/phpmailer": "^6.8",
    "firebase/php-jwt": "^6.4",
    "symfony/http-foundation": "^6.4",
    "symfony/routing": "^6.4",
    "guzzlehttp/guzzle": "^7.5",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.4",
    "doctrine/orm": "^2.15",
    "doctrine/dbal": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Database\\": "database/"
    },
    "files": [
      "config/constants.php"
    ]
  },
  "scripts": {
    "test": "phpunit",
    "lint": "parallel-lint src tests",
    "cs-check": "phpcs src",
    "cs-fix": "phpcbf src"
  }
}
