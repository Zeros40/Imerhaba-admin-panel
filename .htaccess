DirectoryIndex index.php index.html
Options -Indexes
Options -MultiViews

RewriteEngine On

# 0) Serve existing files/directories as-is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 1) Route API requests to api.php
RewriteRule ^api/ - [L]
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^(.*)$ api.php [QSA,L]

# 2) Internal map: /page or /page/ -> /page.php (if such PHP file exists)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

# 3) Optional: strip trailing slash for non-directories (keeps .php links working)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ $1 [R=301,L]
